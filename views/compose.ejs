<%- include("partials/header.ejs") -%>
<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class"form-group">
    <label>Title</label>
    <input class="form-control" type="text" name="postTitle">
    <label>Excerpt</label>
    <textarea class="form-control" name="postExcerpt" rows="5" cols="80"></textarea>
    <label>Composition</label>
    <textarea class="form-control" name="postBody" rows="10" cols="80"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>
<%- include("partials/footer.ejs") -%>
